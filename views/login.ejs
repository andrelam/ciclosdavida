<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="pt">
<head>
    <% include head.ejs %>
</head>
<body>

    <% include header.ejs %>

	<div class="container">
		<div class="col-sm-8 col-sm-offset-2">
			<% if (message.length > 0) { %>
				<div class="alert alert-danger"><%= message %></div>
			<% } %>
			<h1>Acesse seu mapa!</h1>
			<p>Utilize o seu e-mail e senhas cadastrados para acessar o seu mapa dos Ciclos da Vida.</p>
			<form action="/acessar" method="post">
				<div class="form-group">
					<label>Email</label>
					<input type="text" class="form-control" name="email" required placeholder="Informe seu e-mail">
				</div>
				<div class="form-group">
					<label>Senha</label>
					<input type="password" class="form-control" name="password" required placeholder="Informe sua senha">
				</div>

				<button type="submit" class="btn btn-warning btn-lg">Acessar</button>
			</form>
		</div>

	</div>
	
	<% include footer.ejs %>

</body>
</html>


	
