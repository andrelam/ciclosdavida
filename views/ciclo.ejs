<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include head.ejs %>
</head>
<body class="container">

    <header>
        <% include header.ejs %>
    </header>

    <main>
		<% if (message.length > 0) { %>
			<div class="alert alert-danger"><%= message %></div>
		<% } %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Ciclos da Vida para <%= data.nome %></h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
			<table  class="table table-striped table-bordered table-hover">
				<tr>
					<td colspan='6'><b>Nome:</b> <%= data.nome %></td>
					<td colspan='2'><b>Data Nasc:</b> <%= data.aniversario %></td>
					<td colspan='2'><b>Dia Nasc.:</b> <%= data.diaDaSemana %></td>
					<td colspan='2'><b>Hoje:</b> <%= data.hoje %></td>
					<td colspan='2'><b>Dias:</b> <%= data.numeroDias %></td>
					<td colspan='2'><b>Anos Abs.:</b> <%= data.anoAbsoluto %></td>
				</tr>
				<tr>
					<td colspan='2'>Mega-Ciclo</td>
					<td colspan='14'><b><%= data.ciclo.nomeMegaCiclo %></b></td>
				</tr>
				<tr>
					<td colspan='2'>Ciclo</td>
					<td colspan='14'><b><%= data.ciclo.nomeCiclo %></b></td>
				</tr>
				<tr>
					<td colspan='2'>Ano</td>
					<td colspan='14'><b><%= data.ciclo.nomeAno %></b></td>
				</tr>
				<tr>
					<td colspan='2' style='font-size: 80%'>M&ecirc;s</td>
					<% for (var i = 0; i <= 6; i++) { %><td colspan='2' style='text-align:center;font-size:80%'><b><%= data.ciclo.meses[i].nomeMes %></b></td><% } %>
				</tr>
				<% for (var w = 0; w <= 6; w++) { %>
				<tr>
				<td colspan='2' style='font-size: 80%'><b><%= data.ciclo.meses[0].semanas[w].nomeSemana %></b></td>
				<% for (var m = 0; m <= 6; m++) { %>
				<td style='font-size: 80%'><% if (data.ciclo.meses[m].semanas[w].corrente) { %><b><% } %><%= data.ciclo.meses[m].semanas[w].inicioSemana %><% if (data.ciclo.meses[m].semanas[w].corrente) { %></b><% } %></td>
				<td style='font-size: 80%'><% if (data.ciclo.meses[m].semanas[w].corrente) { %><b><% } %><%= data.ciclo.meses[m].semanas[w].fimSemana %><% if (data.ciclo.meses[m].semanas[w].corrente) { %></b><% } %></td>
				<% } %>
				</tr>
				<% } %>
			</table>
		</div>
	</main>
	
    <footer>
        <% include footer.ejs %>
    </footer>
    
</body>
</html>