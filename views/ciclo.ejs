<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include head.ejs %>
</head>
<body class="container">

    <header>
        <% include header.ejs %>
    </header>

    <main>
		<% if (message.length > 0) { %>
			<div class="alert alert-danger"><%= message %></div>
		<% } %>

        <div id="page-wrapper">
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">Ciclos da Vida para <i><%= data.nome %></i></h1>
                </div>
                <!-- /.col-lg-12 -->
            </div>
			<table  class="table table-striped table-bordered table-hover">
				<tr>
					<td colspan='6' style='font-size: 80%; vertical-align: middle'><b>Nome:</b> <%= data.nome %></td>
					<td colspan='2' style='font-size: 80%; vertical-align: middle'><b>Data Nasc:</b> <%= data.aniversario %></td>
					<td colspan='2' style='font-size: 80%; vertical-align: middle'><b>Dia Nasc.:</b> <abbr title='Tod<%= data.generoDiaDaSemana %> <%= data.diaDaSemana %> ser&aacute; um dia Chesed'><%= data.diaDaSemana %></abbr></td>
					<td colspan='2' style='font-size: 80%; vertical-align: middle'><b>Hoje:</b> <%= data.hoje %></td>
					<td colspan='2' style='font-size: 80%; vertical-align: middle'><b>Dias:</b> <%= data.numeroDias %></td>
					<td colspan='2' style='font-size: 80%; vertical-align: middle'><b>Anos Abs.:</b> <%= data.anoAbsoluto %></td>
				</tr>
<!--				<tr>
					<td colspan='2'>Mega-Ciclo</td>
					<td colspan='14'><b><%= data.ciclo.nomeMegaCiclo %></b></td>
				</tr> -->
				<tr>
					<td colspan='2'>Ciclo</td>
					<% if (data.ciclo.quebraCiclo) { %>
					<td colspan='<%= data.ciclo.colunaCiclo %>' style='text-align:center'><img src='https://s3.amazonaws.com/www.coldfire.com.br/images/<%= data.ciclo.nomeCiclo %>.png' alt='<%= data.ciclo.nomeCiclo %>' height=14></img></td>
					<td colspan='<%= (14 - data.ciclo.colunaCiclo) %>' style='text-align:center'><img src='https://s3.amazonaws.com/www.coldfire.com.br/images/<%= data.ciclo.proximoCiclo %>.png' alt='<%= data.ciclo.proximoCiclo %>' height=14></img></td>
					<% } else { %>
					<td colspan='14' style='text-align:center'><img src='https://s3.amazonaws.com/www.coldfire.com.br/images/<%= data.ciclo.nomeCiclo %>.png' alt='<%= data.ciclo.nomeCiclo %>' height=14></img></td>
					<% } %>
				</tr>
				<tr>
					<td colspan='2'>Ano</td>
					<% if (data.ciclo.quebraAno) { %>
					<td colspan='<%= data.ciclo.colunaAno %>' style='text-align:center'><img src='https://s3.amazonaws.com/www.coldfire.com.br/images/<%= data.ciclo.nomeAno %>.png' alt='<%= data.ciclo.nomeAno %>' height=14></img></td>
					<td colspan='<%= (14 - data.ciclo.colunaAno) %>' style='text-align:center'><img src='https://s3.amazonaws.com/www.coldfire.com.br/images/<%= data.ciclo.proximoAno %>.png' alt='<%= data.ciclo.proximoAno %>' height=14></img></td>
					<% } else { %>
					<td colspan='14' style='text-align:center'><img src='https://s3.amazonaws.com/www.coldfire.com.br/images/<%= data.ciclo.nomeAno %>.png' alt='<%= data.ciclo.nomeAno %>' height=14></img></td>
					<% } %>
				</tr>
				<tr>
					<td colspan='2'>M&ecirc;s</td>
					<% for (var i = 0; i <= 6; i++) { %><td colspan='2' style='text-align:center;font-size:80%'><img src='https://s3.amazonaws.com/www.coldfire.com.br/images/<%= data.ciclo.meses[i].nomeMes %>.png' alt='<%= data.ciclo.meses[i].nomeMes %>' height=14></img></td><% } %>
				</tr>
				<% for (var w = 0; w <= 6; w++) { %>
				<tr>
				<td colspan='2' style='font-size: 80%; text-align:center''><img src='https://s3.amazonaws.com/www.coldfire.com.br/images/<%= data.ciclo.meses[0].semanas[w].nomeSemana %>.png' alt='<%= data.ciclo.meses[0].semanas[w].nomeSemana %>' height=14></img></td>
				<% for (var m = 0; m <= 6; m++) { %>
				<td style='font-size: 80%'><% if (data.ciclo.meses[m].semanas[w].corrente) { %><b><% } %><%= data.ciclo.meses[m].semanas[w].inicioSemana %><% if (data.ciclo.meses[m].semanas[w].corrente) { %></b><% } %></td>
				<td style='font-size: 80%'><% if (data.ciclo.meses[m].semanas[w].corrente) { %><b><% } %><%= data.ciclo.meses[m].semanas[w].fimSemana %><% if (data.ciclo.meses[m].semanas[w].corrente) { %></b><% } %></td>
				<% } %>
				</tr>
				<% } %>
			</table>
		</div>
	</main>
	
    <footer>
        <% include footer.ejs %>
    </footer>
    
</body>
</html>